<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:IsiiSports.Controls;assembly=IsiiSports"
             x:Class="IsiiSports.Controls.ImageButton"
             BackgroundColor="Transparent" >
  
  <AbsoluteLayout x:Name="Root" HorizontalOptions="Center" WidthRequest="{Binding WidthRequest}" HeightRequest="{Binding HeightRequest}">
    <controls:SportButton x:Name="Background"
    	AbsoluteLayout.LayoutBounds=".5,.5,1,1"
    	AbsoluteLayout.LayoutFlags="All"
    	BackgroundColor="{Binding ButtonBackgroundColor}"
    	BorderRadius="3"
    	TextColor="White"/>

    <StackLayout AbsoluteLayout.LayoutBounds=".5,.5,-1,-1" AbsoluteLayout.LayoutFlags="PositionProportional" Orientation="Horizontal" Spacing="8">
	  <Image Source="{Binding Source}" VerticalOptions="Center"/>
      <Label TextColor="White" Text="{Binding Text}" FontSize="Medium" VerticalOptions="Center" />
    </StackLayout>

    <controls:SportButton BorderRadius="{Binding BorderRadius}"
    	BackgroundColor="Transparent"
    	BindingContext="{x:Reference Name=Background}"
    	AbsoluteLayout.LayoutFlags="All"
    	AbsoluteLayout.LayoutBounds=".5,.5,1,1"
    	Clicked="HandleClick"/>
  </AbsoluteLayout>
</ContentView>
