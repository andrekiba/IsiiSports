<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IsiiSports.Pages.GamesPage"
             BackgroundColor="#e6e6e6">
  <Grid HorizontalOptions="Fill" VerticalOptions="Fill">
    <!--<Label Text="Prova" TextColor="Black"></Label>-->
    <ListView ItemsSource="{Binding GameList}" HorizontalOptions="Fill" VerticalOptions="Fill">
      <ListView.ItemTemplate>
        <DataTemplate>
          <ViewCell Margin="12" BackgroundColor="White">
            <Grid>
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
              </Grid.ColumnDefinitions>
              <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                  <RowDefinition Height="*"/>
                  <RowDefinition Height="Auto"/>
                  <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <StackLayout Grid.Row="0" Orientation="Horizontal">
                  <Label Text="A" TextColor="Black"/>
                </StackLayout>
                <StackLayout Grid.Row="2" Orientation="Horizontal">
                  <Label Text="B" TextColor="Black"/>
                </StackLayout>
              </Grid>
            </Grid>
          </ViewCell>
        </DataTemplate>
      </ListView.ItemTemplate>
    </ListView>
  </Grid>
</ContentPage>